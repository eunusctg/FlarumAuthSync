{
    "name": "forumez/flarum-ext-supabase-auth",
    "description": "Enhanced Supabase authentication integration for Flarum with social login, 2FA and profile synchronization",
    "type": "flarum-extension",
    "license": "MIT",
    "keywords": [
        "flarum", 
        "supabase", 
        "authentication", 
        "social-login", 
        "oauth", 
        "2fa",
        "two-factor-authentication"
    ],
    "homepage": "https://github.com/forumez/flarum-ext-supabase-auth",
    "support": {
        "issues": "https://github.com/forumez/flarum-ext-supabase-auth/issues",
        "source": "https://github.com/forumez/flarum-ext-supabase-auth",
        "docs": "https://github.com/forumez/flarum-ext-supabase-auth/wiki"
    },
    "authors": [
        {
            "name": "ForumEZ Team",
            "email": "support@forumez.com",
            "homepage": "https://forumez.com",
            "role": "Developer"
        }
    ],
    "require": {
        "flarum/core": "^1.0.0",
        "psr/http-client": "^1.0",
        "guzzlehttp/guzzle": "^7.0",
        "bacon/bacon-qr-code": "^2.0",
        "spomky-labs/otphp": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "ForumEZ\\SupabaseAuth\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Supabase Authentication",
            "category": "authentication",
            "icon": {
                "name": "fas fa-sign-in-alt",
                "backgroundColor": "#0066CC",
                "color": "#ffffff"
            },
            "assets": {
                "less": [
                    "resources/less/forum.less",
                    "resources/less/admin.less"
                ],
                "translations": [
                    "resources/locale/en.yml"
                ]
            }
        },
        "flarum-cli": {
            "modules": {
                "admin": true,
                "forum": true,
                "js": true,
                "jsCommon": false,
                "css": true,
                "locale": true,
                "gitConf": true,
                "githubActions": false,
                "prettier": false,
                "typescript": false,
                "bundlewatch": false,
                "backendTesting": false,
                "editorConfig": true,
                "styleci": false
            }
        }
    },
    "suggest": {
        "flarum/nicknames": "Allow users to set nicknames independent of their Supabase display names",
        "flarum/akismet": "Block spam registrations from Supabase social logins",
        "flarum/approval": "Require moderation for Supabase registrations"
    }
}
